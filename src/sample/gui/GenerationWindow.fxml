         <VBox.margin>
            <Insets bottom="5.0" top="10.0" />
         </VBox.margin>
      </ImageView>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="New Simulation">
         <font>
            <Font name="Arial Bold" size="18.0" />
