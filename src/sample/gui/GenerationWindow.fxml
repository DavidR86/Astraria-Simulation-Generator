               <padding>
                  <Insets left="20.0" right="50.0" />
               </padding>
            </GridPane>
            <ImageView fx:id="loadingImage" fitHeight="41.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/orig.gif" />
               </image>
